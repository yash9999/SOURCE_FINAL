<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="2dp"
    android:id="@+id/relLayImages">

    <ImageView
        android:id="@+id/imgViewProduct"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerVertical="true"
        android:scaleType="centerCrop" />


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/txt_10_dp"
        android:layout_toRightOf="@id/imgViewProduct">

        <TextView
            android:id="@+id/txtViewCategoryName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textColor="@color/color_black"
            android:textSize="@dimen/txt_12_dp" />

        <TextView
            android:id="@+id/txtViewProductName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtViewCategoryName"
            android:layout_marginTop="3dp"
            android:textColor="@color/color_gray"
            android:textSize="@dimen/txt_12_dp" />
    </RelativeLayout>


</RelativeLayout>