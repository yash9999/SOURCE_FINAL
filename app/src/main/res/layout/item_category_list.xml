<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/cardView"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_margin="5dp"
    android:elevation="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/line_color"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/relLayImages"
            android:layout_width="match_parent"
            android:layout_height="115dp"
            android:layout_margin="1dp"
            android:background="@color/color_white">

            <ImageView
                android:id="@+id/imgViewCategory"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_profile_dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:background="@color/color_alpha_black">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/txtViewCategoryName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/color_white"
                        android:layout_centerHorizontal="true"
                        android:textSize="@dimen/txt_medium_dp" />

                    <TextView
                        android:id="@+id/txtViewProductQuantity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txtViewCategoryName"
                        android:layout_centerHorizontal="true"
                        android:textColor="@color/color_white"
                        android:textSize="@dimen/txt_medium_dp" />
                </RelativeLayout>

            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relLayDone"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:layout_marginLeft="1dp"
            android:layout_marginRight="1dp"
            android:background="@color/color_white"
            android:padding="3dp">

            <ImageView
                android:id="@+id/imgViewNotificiations"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_notifications" />

            <TextView
                android:id="@+id/txtViewCompleted"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:layout_toRightOf="@+id/imgViewNotificiations"
                android:text="30% Done"
                android:textColor="@color/color_gray"
                android:textSize="@dimen/txt_medium_dp" />
        </RelativeLayout>
    </LinearLayout>


</android.support.v7.widget.CardView>