<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="3dp">


    <!--Receiver -->
    <RelativeLayout xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/rel_receiver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_gravity="center"
        android:layout_marginRight="80dp">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:background="@drawable/chat_bubble_receiver"
            android:orientation="vertical"
            android:paddingBottom="5dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="5dp">


            <TextView
                android:id="@+id/txtMessageReceiver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:text="mxnc jhsxzc jzx cjz"
                android:textColor="@color/black"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/txtTimeReceiver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtMessageSender"
                android:layout_gravity="start"
                android:layout_marginTop="1dp"
                android:text="12.23"
                android:textColor="@color/alpha_black"
                android:textSize="9dp" />

        </LinearLayout>

    </RelativeLayout>

    <!--Sender -->
    <RelativeLayout xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/rel_Sender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp">

        <LinearLayout
            android:id="@+id/relS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/chat_bubble_sender"
            android:orientation="vertical"
            android:paddingBottom="5dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingTop="5dp">


            <TextView
                android:id="@+id/txtMessageSender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:text="zndc skz czkx ckzc kzjc kzjxc"
                android:textColor="@color/black"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/txtTimeSender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtMessageSender"
                android:layout_gravity="end"
                android:layout_marginTop="1dp"
                android:text="12.23"
                android:textColor="@color/alpha_black"
                android:textSize="9dp" />
        </LinearLayout>


    </RelativeLayout>
</RelativeLayout>