<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="15dp"
    android:paddingLeft="40dp"
    android:paddingRight="40dp"
    android:paddingTop="15dp"
    tools:context="com.example.yogeshgarg.source.mvp.setting.SettingFragment">

    <EditText
        android:id="@+id/edtTextName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/edittext_green_rect"
        android:hint="@string/name"
        android:paddingBottom="12dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="12dp"
        android:maxLines="1"
        android:inputType="text"
        android:textColorHint="@color/color_white"
        android:textColor="@color/color_white"
        android:textSize="@dimen/txt_small_dp" />


    <EditText
        android:id="@+id/edtTextEmailId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtTextName"
        android:layout_marginTop="10dp"
        android:background="@drawable/edittext_green_rect"
        android:hint="@string/email"
        android:paddingBottom="12dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="12dp"
        android:inputType="textEmailAddress"
        android:maxLines="1"
        android:textColor="@color/color_white"
        android:textColorHint="@color/color_white"
        android:textSize="@dimen/txt_small_dp" />

    <EditText
        android:id="@+id/edtTextPhoneNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtTextEmailId"
        android:layout_marginTop="10dp"
        android:background="@drawable/edittext_green_rect"
        android:hint="@string/phone_number"
        android:paddingBottom="12dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="12dp"
        android:maxLines="1"
        android:inputType="number"
        android:textColor="@color/color_white"
        android:textColorHint="@color/color_white"
        android:textSize="@dimen/txt_small_dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="65dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linLayNotifications"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgViewNotifications"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@mipmap/ic_notifications"/>
            <TextView
                android:id="@+id/txtViewNotifications"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/txt_normal_dp"
                android:text="@string/notifications"
                android:textColor="@color/color_dark_grey"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linLayAbout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="6dp">
            <ImageView
                android:id="@+id/imgViewAbout"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@mipmap/ic_about"/>
            <TextView
                android:id="@+id/txtViewAbout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/txt_normal_dp"
                android:text="@string/lable_about"
                android:textColor="@color/color_dark_grey"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linLayFAQ"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="6dp">
            <ImageView
                android:id="@+id/imgViewFAQ"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@mipmap/ic_faq"/>
            <TextView
                android:id="@+id/txtViewFAQ"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/txt_normal_dp"
                android:text="@string/faq"
                android:textColor="@color/color_dark_grey"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linLayLogout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="6dp">
            <ImageView
                android:id="@+id/imgViewLogout"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@mipmap/ic_logout"/>
            <TextView
                android:id="@+id/txtViewLogout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/txt_normal_dp"
                android:text="@string/logout"
                android:textColor="@color/color_dark_grey"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"
                />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
